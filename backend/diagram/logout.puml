@startuml Logout (POST)

header Restaurant Reservation Sequence Diagram
footer Page %page% of %lastpage%
title "Logout (POST)"

participant "Client" as client
participant "<<javaScript>>\n:server" as server
participant "<<router>>\n:auth" as routerAuth
participant "<<controllers>>\n:auth" as controllersAuth

client->server ++:req.post('/api/v1/auth/logout')
server->routerAuth ++:app.use('/api/v1/auth', auth)
routerAuth -> controllersAuth ++:logout(token)
controllersAuth -> controllersAuth: invalidateToken(token) / remove session
controllersAuth -> client --:response 200 OK (logged out)

@enduml
